<!--管理者側 間取り管理画面(一覧・追加を兼ねる)-->
<div class="container mt-4">
  <div class="row">
    <h2 class="ml-5 px-3">間取り一覧・追加</h2>
  </div>
  <div class="row mt-5">
    <div class="col-10">
      <div class="row mt-5">
        <div class="col-2 ">
          間取り名
        </div>
        <div class="row">
          <%= form_with model: @floor_plan, url: admin_floor_plans_path, method: :post do |f| %>
            <%= f.text_field :name, class: "mr-5", :size =>"30", placeholder:"間取り名" %>
            <%= f.submit "新規登録",  class: "ml-2 btn btn-success" %>
          <% end %>
        </div>
        <div class="col-6 mt-5">
          <table class="table">
            <thead class="thead-light">
              <th colspan="2">間取り</th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </thead>
              <% @floor_plans.each do |floor_plan| %>
                <tr>
                  <td><%= floor_plan.name %></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td><%= link_to "編集する", edit_admin_floor_plan_path(floor_plan.id), class: "btn btn-success" %></td>
                  <td></td>
                </tr>
              <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>