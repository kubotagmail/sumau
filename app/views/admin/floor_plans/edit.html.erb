<!--管理者側 間取り編集画面-->
<div class="container mt-4">
  <div class="row mt-5">
    <div class="col-3">
      <h2 class="ml-4 px-3">間取り編集</h2>
    </div>
  </div>
  <%= form_with model: @floor_plan, url: admin_floor_plan_path, method: :patch do |f| %>
    <div class="row mt-5">
      <div class="col-2">
        間取り名
      </div>
      <div class="col-3 pl-0 mr-0">
        <%= f.text_field :name, class: "mr-2", :size =>"25", placeholder: "間取り名" %>
      </div>
      <div class="col-2">
        <%= f.submit "変更を保存", class: "ml-0 btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>