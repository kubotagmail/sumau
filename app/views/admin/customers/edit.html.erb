<!--管理者側 顧客編集画面-->
<div class="container mt-5">
  <div class="row">
    <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
  </div>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-sm-3 py-1 mt-2">
        会員ID
      </div>
      <div class="col-sm-3 py-1">
        <%= @customer.id %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
        氏名
      </div>
      <div class="col-sm-3 py-1">
        <%= f.text_field :last_name %>
      </div>
      <div class="col-sm-3 py-1">
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
        フリガナ
      </div>
      <div class="col-sm-3 py-1">
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col-sm-3 py-1">
        <%= f.text_field :first_name_kana %>
      </div>
    </div>

      <div class="row">
        <div class="col-sm-3 py-1 mt-1">
          郵便番号
        </div>
        <div class="col-sm-3 py-1">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3 py-1 mt-1">
          住所
        </div>
        <div class="col-sm-3 py-1">
          <%= f.text_field :address, size: 60 %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3 py-1 mt-1">
           電話番号
        </div>
        <div class="col-sm-3 py-1">
          <%= f.text_field :telephone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3 py-1 mt-1">
           メールアドレス
        </div>
        <div class="col-sm-3 py-1">
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3 py-1 mt-1">
          <%= f.label :会員ステータス %>
        </div>
        <div class="col-sm-3 py-1">
          <% if @customer.is_deleted == false %>
            <%= f.radio_button :is_deleted, false, checked: true %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会" %>
          <% else %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, true, checked: true %>
            <%= f.label :is_deleted, "退会" %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
        </div>
          <div class="col-sm-4 mt-2">
            <%= f.submit "変更を保存", class: "btn btn-success btn-block, col-sm-4 py-1 mt-1" %>
          </div>
      </div>

  <% end %>
</div>