<!--管理者側 顧客詳細画面-->
<div class="container mt-5">
  <div class="row">
    <h2 class="px-3"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
    <div class="col-sm-3 ml-5 my-4">
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 py-1 mt-2">
      会員ID
    </div>
    <div class="col-sm-3 py-1">
      <%= @customer.id %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 py-1 mt-1">
      氏名
    </div>
    <div class="col-sm-3 py-1">
      <%= @customer.last_name + @customer.first_name %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3 py-1 mt-1">
      フリガナ
    </div>
    <div class="col-sm-3 py-1">
      <%= @customer.last_name_kana + @customer.first_name_kana %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3 py-1 mt-1">
      郵便番号
    </div>
    <div class="col-sm-3 py-1">
      <%= @customer.postal_code %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3 py-1 mt-1">
      住所
    </div>
    <div class="col-sm-3 py-1">
      <%= @customer.address %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3 py-1 mt-1">
       電話番号
    </div>
    <div class="col-sm-3 py-1">
      <%= @customer.telephone_number %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3 py-1 mt-1">
       メールアドレス
    </div>
    <div class="col-sm-3 py-1">
      <%= @customer.email %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3 py-1 mt-1">
       会員ステータス
    </div>
    <div class="col-sm-3 py-1">
      <% if @customer.is_deleted == false %>
        <p class = "text-success font-weight-b" >有効</p>
      <% else %>
        <p class = "text-secondary font-weight-b">退会</p>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-1.5 mt-2">
      <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success btn-black" %>
    </div>
  </div>
</div>