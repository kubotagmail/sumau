<!--管理者側 顧客一覧画面-->
<div class="container mt-5">

  <div class="row">
    <div class="col-4 pl-5">
      <h2>会員一覧</h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-12 mx-auto">
      <table class="table">
        <thead class= "table-secondary">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>住所</th>
            <th>電話番号</th>
          　<th>メールアドレス</th>
          　<th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.last_name + customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.address %></td>
              <td><%= customer.telephone_number %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <p class="text-success font-weight-b">有効</p>
                <% else %>
                  <p class="text-secondary font-weight-b">退会</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!--ページネーション機能-->
<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
　　　<p><%= paginate @customers %></p>
    </div>
  </div>
</div>
<!--ページネーションここで終わり-->

