<!--管理者側 物件種別編集画面-->
<div class="container mt-4">
  <div class="row mt-5">
    <div class="col-3">
      <h2 class="ml-4 px-3">物件種別編集</h2>
    </div>
  </div>
  <%= form_with model: @property_type, url: admin_property_type_path, method: :patch do |f| %>
    <div class="row mt-5">
      <div class="col-2">
        物件種別名
      </div>
      <div class="col-3 pl-0 mr-0">
        <%= f.text_field :name, class: "mr-2", :size =>"25", placeholder: "物件種別名" %>
      </div>
      <div class="col-2">
        <%= f.submit "変更を保存", class: "ml-0 btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>