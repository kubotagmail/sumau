<!--管理者側 物件種別管理画面(一覧・追加を兼ねる)-->
<div class="container mt-4">
  <div class="row">
    <h2 class="ml-5 px-3">物件種別一覧・追加</h2>
  </div>
  <div class="row mt-5">
    <div class="col-10">
      <div class="col-5">
      </div>
      <div class="row mt-5">
        <div class="col-2 ">
          物件種別名
        </div>
        <div class="row">
          <%= form_with model: @property_type, url: admin_property_types_path, method: :post do |f| %>
            <%= f.text_field :name, class: "mr-5", :size =>"30", placeholder:"物件種別名" %>
            <%= f.submit "新規登録",  class: "ml-2 btn btn-success" %>
          <% end %>
        </div>
        <div class="col-6 mt-5">
          <table class="table">
            <thead class="thead-light">
              <th colspan="2">物件種別</th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </thead>
            <tbody>
              <% @property_types.each do |property_type| %>
                <tr>
                  <td><%= property_type.name %></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td><%= link_to "編集する", edit_admin_property_type_path(property_type.id), class: "btn btn-success" %></td>
                  <td></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>