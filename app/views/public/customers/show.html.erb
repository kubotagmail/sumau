<!--SUMAU顧客のマイページ-->
<div class="container mt-3">
  <div class="row">
    <div class="col-sm-3 ml-5 my-4">
      <div class="row">
        <h2 class="mx-4 px-3">マイページ</h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2 mt-2">
      <h4><strong>登録情報</strong></h4>
    </div>
    <div class="col-2 my-1 pl-0 pb-2">
    <!--ゲストユーザーでログインしている場合、編集のページへいけないようにする-->
      <% if current_customer.address == "guestuser.address1234567890" %>
        <%= link_to "編集する", "#", class:"btn btn-success btn-block", data: { confirm: "ゲストユーザーは編集できません。" }  %>
      <% else %>
        <%= link_to "編集する", public_edit_path, class:"btn btn-success btn-block" %>
      <% end %>
    </div>
    <!---->
  </div>

    <table class="col-9 table table-bordered">
      <tbody>
        <tr>
          <td class="col-3" style="background-color: #e5e5e5;">氏名</td>
          <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td style="background-color: #e5e5e5;">カナ</td>
          <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td style="background-color: #e5e5e5;">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td style="background-color: #e5e5e5;">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td style="background-color: #e5e5e5;">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td style="background-color: #e5e5e5;">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>