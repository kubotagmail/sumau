<!--顧客の会員登録画面-->
<div class="container">
  <div class="row">
    <div class="px-5 mx-auto">
      <div class="row">
        <h2 class="mt-4 ml-3 px-3">新規会員登録</h2>
      </div>
      <!--デフォルトの記述-->
      <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!--変更後の記述-->
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
        <%= render "public/shared/error_messages", obj: resource %>
        <table cellpadding="10">
          <th>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </th>
          <tr>
            <td>名前</td>
            <td>(姓)</td>
            <td><%= f.text_field :last_name, placeholder: "山田" %></td>
            <td>(名)</td>
            <td><%= f.text_field :first_name, placeholder: "花子"%></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>(セイ)</td>
            <td><%= f.text_field :last_name_kana, placeholder: "ヤマダ" %></td>
            <td>(メイ)</td>
            <td><%= f.text_field :first_name_kana, placeholder: "ハナコ" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td></td>
            <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td></td>
            <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>住所</td>
            <td></td>
            <td colspan="3"><%= f.text_field :address, placeholder: "東京都中央区新富0-0",  :size => "52" %></td>
          </tr>
          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td></td>
            <td><%= f.text_field :telephone_number, placeholder: "00000000" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>パスワード(6文字以上)</td>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>パスワード(確認用)</td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
            <td></td>
            <td></td>
          </tr>
        </table>
       <% end %>
      <div class="row">
        <h2 class="mt-4 ml-3 px-3">既に登録済みの方</h2>
      </div>
        <p class="ml-5"><%= render "public/shared/links" %>からログインしてください</p>
    </div>
  </div>
</div>